{
  "name": "diy-blockchain",
  "description": "Experimental Javascript Blockchain",
  "version": "0.0.1",
  "license": "MIT",
  "main": "./server.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "blockchain",
    "educational",
    "experimental",
    "javascript"
  ],
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bip39": "^2.5.0",
    "bootstrap": "^3.3.7",
    "bootstrap-notify": "^3.1.3",
    "bs58check": "^2.1.1",
    "buffer": "^5.1.0",
    "colors": "^1.2.1",
    "crypto-js": "^3.1.9-1",
    "elliptic": "^6.4.0",
    "express": "^4.16.3",
    "heredoc": "^1.3.1",
    "ipfs": "^0.28.2",
    "ipfs-pubsub-room": "^1.2.0",
    "jquery": "^3.3.1",
    "popper": "^1.0.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "browserify": "^16.1.1",
    "npm-watch": "^0.3.0",
    "standard": "^11.0.1",
    "uglify-es": "^3.3.9"
  },
  "watch": {
    "build-dev": {
      "patterns": [
        "js",
        "./"
      ],
      "extensions": "js",
      "ignore": "web/dist/**"
    }
  },
  "standard": {
    "ignore": [
      "/web/dist/**",
      "/node_modules/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phramz/diy-blockchain.git"
  },
  "scripts": {
    "build": "npm run-script build-prod",
    "build-dev": "browserify --debug web/index.js > web/dist/app.js",
    "build-prod": "browserify web/index.js | uglifyjs > web/dist/app.js",
    "standard": "standard",
    "watch": "npm-watch",
    "test": "npm run-script standard",
    "fix": "standard --fix"
  }
}
